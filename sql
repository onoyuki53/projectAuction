        SELECT             item_id AS id,             item_name AS name,             item_price AS price,             max_price AS max_price,             buy_user AS user,             item_user AS owner,             is_sold AS status,             category AS category         FROM             Item        UNION        SELECT             user_id AS id,             mail AS name,             NULL AS price,             NULL AS max_price,             NULL AS user,             NULL AS owner,             NULL AS status,             NULL AS category         FROM             User